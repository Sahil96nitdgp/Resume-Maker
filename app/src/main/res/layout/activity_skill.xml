<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/root_view"
        android:background="#320f3c"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add All Your Skills, Hobbies And Interests"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#fff"/>


        <EditText
            android:id="@+id/skilllist"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1.57"
            android:background="#fff"
            android:hint="List here all your skills and hobbies."
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="30dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/skillinfodone"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:text="Done"
            android:layout_marginLeft="90dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="45dp"/>


    </LinearLayout>

