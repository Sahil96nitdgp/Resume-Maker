<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.training.sahil.resumemaker.BuildActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Resume is Ready!"
            android:textSize="40dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"/>





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a CODE (Between 0-9) to view your Resume Later"
            android:textColor="#fff"
            android:padding="10dp"
            android:textColorHint="#fff"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:id="@+id/entryid"
            android:background="#000"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/see"
            android:layout_marginTop="35dp"
            android:text="click here to See"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainmenubtn"
            android:layout_marginTop="100dp"
            android:text="click here to go to main menu"
            android:textSize="20dp"
            android:layout_marginLeft="17dp"/>

    </LinearLayout>




</android.support.v4.widget.NestedScrollView>
