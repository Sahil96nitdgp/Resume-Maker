<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="#d82525"
    android:padding="10dp"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Fill The Required Fields"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#ffb7b7"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/name"
        android:layout_marginTop="8dp"
        android:background="#ffb7b7"
        android:textColor="#000000"
        android:hint="Enter Full Name ( eg : Sherlock Holmes )"
        android:textColorHint="#000000"
        android:layout_weight="0.11" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/gender"
        android:layout_marginTop="8dp"
        android:background="#ffb7b7"
        android:textColor="#000000"
        android:hint="Enter Gender ( eg : Male )"
        android:textColorHint="#000000"
        android:layout_weight="0.13" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dob"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:background="#ffb7b7"
        android:hint="Enter D.O.B ( as DD/MM/YYYY )"
        android:textColorHint="#000000"
        android:layout_weight="0.13" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/contact"
        android:layout_marginTop="8dp"
        android:background="#ffb7b7"
        android:hint="Enter Contact No. ( eg : 9836286146 )"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:layout_weight="0.10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/email"
        android:layout_marginTop="8dp"
        android:background="#ffb7b7"
        android:hint="Enter Email Address (eg:sh221B@yahoo.com)"
        android:textSize="16dp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_weight="0.10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginTop="8dp"
        android:background="#ffb7b7"
        android:textColor="#000000"
        android:hint="Enter Residential Address \n( eg : 221B, Baker's Street,London ) \n\n"
        android:textColorHint="#000000"/>


    <Button
        android:layout_width="155dp"
        android:layout_height="80dp"
        android:id="@+id/contactinfodone"
        android:layout_marginTop="40dp"
        android:background="#ffb7b7"
        android:text="Next"
        android:layout_marginLeft="90dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="45dp"/>


    </LinearLayout>